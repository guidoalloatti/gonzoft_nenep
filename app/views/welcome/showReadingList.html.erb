<div class="container">
  <div class="page-header" align="center">
    <h1>Viajeros y Territorios<small> para que te informes antes de viajar </small> </h1>
  </div>
  <div class="row">
    <% @articles.each.with_index do |article, index| %>
      <% classToUse = @classes[index % 3] %>
      <div class="featurette <%= classToUse %>" >
        <a href="/welcome/articles/<%= article.id %>">
          <%= image_tag article.photo.url(:medium), class:"featurette-image img-responsive pull-left list" %>
        </a>
        <h2 class="featurette-heading"><%= article.title %>
            <small class="text-muted"><%= article.detail%></small>
        </h2>
        <%= simple_format(truncate(article.text, length: 400), class: "lead ") %>
      </div>
      <hr class="featurette-divider">
    <% end %>
  </div>
  <%= render :partial => "layouts/footers/staticFooter" %>
</div>
