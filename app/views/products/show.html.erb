<div class="container margin-bottom">
  <br/>  
  <div class="row">
    <div class="well well-sm cruise-text">
       <strong><%= @product.name %></strong> <small> sale el <%= @product.startDate %> </small>
      <div id="promo-options" class="btn-group pull-right" role="group" aria-label="...">      
        <%= link_to 'Editar', edit_product_path(@product), {class: "btn btn-default btn-lg"} %> 
        <%= link_to 'Volver', "/products/list/#{@product.productType}", { class: "btn btn-primary btn-lg"} %>
      </div>
    </div>
  </div>

  <div class="well well-sm cruise-data-container img-rounded">
    <div class="row margin-sm">
      <div class="product-left-column col-md-6">
        <p class="lead"> <strong><u>Fechas</u></strong><br/>
          <strong>Sale: </strong> <%= @product.startDate %><br/> 
          <strong> Vuelta: </strong> <%= @product.endDate %><br/>
          <strong> Cantidad de Noches: </strong> <%= @product.nights %> 
        </p>
      </div>
      <div class="product-right-column col-md-6" >
        <p class="lead"> <strong><u>Itinerario</u></strong><br/>
          <%= @product.itinerary %>
        </p>
      </div>
    </div>

    <div class="row margin-sm">
      <div class="product-left-column col-md-6">
        <div class="lead">
          <strong><u>Crucero</u></strong><a href="<%= @product.boatLink %>" TARGET="_blank"> <%= @product.boatName %></a>
        </div>
        <div>
          <%= image_tag @product.cruise_image.url(:medium), class:"img img-rounded" %>  
        </div>
      </div>
      <div class="product-right-column col-md-6">
        <div class="lead">
          <strong><u>Itinerario Ilustrado</u></strong>
        </div>
        <div>
        <%= image_tag @product.itinerary_image.url(:medium), class:"img img-rounded" %>
        </div>
      </div>
    </div>

    <div class="row margin-sm">
      <div class="product-left-column col-md-6 lead">
        <strong><u>Precio</u></strong><br/>
        <%= @product.price %>
      </div>
    </div>
  </div>
</div>